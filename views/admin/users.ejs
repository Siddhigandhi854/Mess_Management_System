<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Mess Management System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          animation: {
            'float': 'float 6s ease-in-out infinite',
            'pulse-slow': 'pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite',
          },
          keyframes: {
            float: {
              '0%, 100%': { transform: 'translateY(0px)' },
              '50%': { transform: 'translateY(-10px)' },
            }
          }
        }
      }
    }
  </script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #2d1b1b;
      background-image: 
        linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.7)),
        url('https://images.pexels.com/photos/3184418/pexels-photo-3184418.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      min-height: 100vh;
      position: relative;
      background-repeat: no-repeat;
    }
    .glass-morphism {
      background: rgba(255, 255, 255, 0.1);
      backdrop-filter: blur(15px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    }
    .glass-morphism:hover {
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.25);
      transform: translateY(-3px);
    }
    .admin-accent {
      background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
      transition: all 0.3s ease;
    }
    .admin-accent:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(239, 68, 68, 0.4);
    }
    .btn-success {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      transition: all 0.3s ease;
    }
    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(16, 185, 129, 0.4);
    }
    .btn-danger {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
      transition: all 0.3s ease;
    }
    .btn-danger:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 20px rgba(239, 68, 68, 0.4);
    }
    .form-input {
      border: 2px solid rgba(255, 255, 255, 0.3);
      background: rgba(255, 255, 255, 0.1);
      transition: all 0.3s ease;
      color: white;
    }
    .form-input:focus {
      border-color: #dc2626;
      box-shadow: 0 0 0 3px rgba(239, 68, 68, 0.3);
      background: rgba(255, 255, 255, 0.2);
    }
    .form-input::placeholder {
      color: rgba(255, 255, 255, 0.7);
    }
    .stat-card {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.25);
      transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }
    .stat-card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 0 25px 60px rgba(0, 0, 0, 0.2);
    }
  </style>
</head>
<body>
  <%- include('../_header') %>
  <main class="container mx-auto px-6 py-12">
    <div class="mb-8">
      <h1 class="text-5xl font-bold text-white mb-2 animate-pulse-slow">User Management</h1>
      <p class="text-purple-200 text-lg">Manage all system users and their permissions</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <div class="glass-morphism rounded-xl p-8">
          <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-3">
            <i class="fas fa-users-cog text-red-400"></i> All Users
          </h2>
          
          <div class="mb-6">
            <div class="flex gap-4">
              <button class="admin-accent text-white px-4 py-2 rounded-lg hover:shadow-xl font-bold text-sm transition hover:scale-105 transform">
                <i class="fas fa-plus mr-2"></i> Add User
              </button>
              <button class="btn-success text-white px-4 py-2 rounded-lg hover:shadow-xl font-bold text-sm transition hover:scale-105 transform">
                <i class="fas fa-download mr-2"></i> Export
              </button>
            </div>
          </div>

          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="border-b border-purple-300">
                  <th class="text-left text-white font-bold py-3 px-4">Name</th>
                  <th class="text-left text-white font-bold py-3 px-4">Email</th>
                  <th class="text-left text-white font-bold py-3 px-4">Role</th>
                  <th class="text-left text-white font-bold py-3 px-4">Status</th>
                  <th class="text-left text-white font-bold py-3 px-4">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% users.forEach(user => { %>
                  <tr class="border-b border-purple-300 hover:bg-white hover:bg-opacity-10 transition">
                    <td class="text-white py-3 px-4">
                      <div class="flex items-center gap-3">
                        <div class="w-8 h-8 bg-gradient-to-br from-red-400 to-orange-400 rounded-full flex items-center justify-center">
                          <i class="fas fa-user text-white text-xs"></i>
                        </div>
                        <%= user.name %>
                      </div>
                    </td>
                    <td class="text-white py-3 px-4"><%= user.email %></td>
                    <td class="text-white py-3 px-4">
                      <span class="px-3 py-1 rounded-full text-xs font-bold <%= user.role === 'admin' ? 'bg-red-400' : user.role === 'messKaki' ? 'bg-blue-400' : 'bg-green-400' %> text-white">
                        <%= user.role === 'messKaki' ? 'Mess Staff' : user.role.charAt(0).toUpperCase() + user.role.slice(1) %>
                      </span>
                    </td>
                    <td class="text-white py-3 px-4">
                      <span class="px-3 py-1 rounded-full text-xs font-bold bg-green-400 text-white">Active</span>
                    </td>
                    <td class="text-white py-3 px-4">
                      <div class="flex gap-2">
                        <button class="btn-success text-white px-3 py-1 rounded text-sm hover:bg-green-500 transition hover:scale-105 transform">
                          <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn-danger text-white px-3 py-1 rounded text-sm hover:bg-red-500 transition hover:scale-105 transform">
                          <i class="fas fa-trash"></i>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <div>
        <div class="glass-morphism rounded-xl p-8">
          <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
            <i class="fas fa-chart-pie text-orange-400"></i> User Statistics
          </h3>
          <div class="space-y-4">
            <div class="flex justify-between items-center">
              <span class="text-purple-200">Total Users</span>
              <span class="text-white font-bold"><%= users.length %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-purple-200">Students</span>
              <span class="text-green-400 font-bold"><%= users.filter(u => u.role === 'student').length %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-purple-200">Mess Staff</span>
              <span class="text-blue-400 font-bold"><%= users.filter(u => u.role === 'messKaki').length %></span>
            </div>
            <div class="flex justify-between items-center">
              <span class="text-purple-200">Admins</span>
              <span class="text-red-400 font-bold"><%= users.filter(u => u.role === 'admin').length %></span>
            </div>
          </div>
        </div>

        <div class="glass-morphism rounded-xl p-8 mt-8">
          <h3 class="text-xl font-bold text-white mb-6 flex items-center gap-3">
            <i class="fas fa-user-plus text-green-400"></i> Quick Add User
          </h3>
          <form class="space-y-4">
            <div>
              <label class="block text-white font-bold mb-2" for="name">Name</label>
              <input type="text" id="name" class="form-input w-full px-4 py-3 rounded-lg" placeholder="Enter name">
            </div>
            <div>
              <label class="block text-white font-bold mb-2" for="email">Email</label>
              <input type="email" id="email" class="form-input w-full px-4 py-3 rounded-lg" placeholder="Enter email">
            </div>
            <div>
              <label class="block text-white font-bold mb-2" for="role">Role</label>
              <select id="role" class="form-input w-full px-4 py-3 rounded-lg">
                <option value="student">Student</option>
                <option value="messKaki">Mess Staff</option>
                <option value="admin">Admin</option>
              </select>
            </div>
            <button type="submit" class="admin-accent w-full text-white px-6 py-3 rounded-lg hover:shadow-xl font-bold text-lg transition hover:scale-105 transform">
              <i class="fas fa-user-plus mr-2"></i> Add User
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>
  <%- include('../_footer') %>
</body>
</html>
